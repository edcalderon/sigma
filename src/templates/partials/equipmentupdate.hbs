<link href="assets/css/equipment-form.css" rel="stylesheet">
<script src="js/qrcode.min.js"></script>
<script src="https://printjs-4de6.kxcdn.com/print.min.js"></script>
<link href="https://printjs-4de6.kxcdn.com/print.min.css" rel="stylesheet">

<form action="/dashboardequipment" method="POST">
    <div class="container register">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.pixabay.com%2Fphoto%2F2017%2F02%2F16%2F10%2F29%2Ficon-2071010_960_720.png&f=1&nofb=1" alt="" />
                <h3>Equipo: {{equipmentId}}</h3>
               {{!--  <p>You are 30 seconds away from earning your own money!</p> --}}  
                {{#if coordinador}}
                <div id="qr_code"></div>  
               <input type="button" onclick="generateQr();" name="" value="Generar QR" /><br />   
                {{/if }}
            </div>
            {{#if coordinador}}
            <div class="col-md-9 register-right">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                        aria-selected="true">Hardware</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                        aria-selected="false">Software</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Detalle</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Identificador del equipo:</label>
                                    <input type="text" class="form-control" id="equipmentId" name="equipmentId" placeholder="" value={{equipmentId}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Referencia del equipo:</label>
                                    <input type="text" class="form-control" id="equipmentRef" name="equipmentRef" placeholder="" value={{equipmentRef}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Identificador del monitor:</label>
                                    <input type="text" class="form-control" id="monitorId" name="monitorId" placeholder="" value={{monitorId}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Referencia del monitor:</label>
                                    <input type="text" class="form-control" id="monitorRef" name="monitorRef" placeholder="" value={{monitorRef}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">¿El equipo cuenta con mouse? :</label>
                                    <div class="select mb-3">
                                        <select name="mouse" class="form-control" value={{mouse}}>
                                            <option value="si">Sí</option>
                                            <option value="no">No</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Procesador :</label>
                                    <input type="text" id="processor" name="processor" class="form-control" placeholder="" value={{processor}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Memoria instalada (RAM) :</label>
                                    <input type="text" id="memoryRam" name="memoryRam" class="form-control" placeholder="" value={{memoryRam}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Referencia del disco duro * :</label>
                                    <input type="text" id="diskRef" name="diskRef" placeholder="" class="form-control" value={{diskRef}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Espacio total el disco duro * :</label>
                                    <input type="text" id="diskSpace" name="diskSpace" placeholder="" class="form-control" value={{diskSpace}} >
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">¿El equipo cuenta con teclado? :</label>
                                    <div class="select mb-3">
                                        <select name="keyboard" class="form-control" value={{keyboard}}>
                                            <option value="si">Sí</option>
                                            <option value="no">No</option>
                                        </select>
                                    </div>
                                </div>
                                    <input type="submit" class="btnRegister" value="Actualizar" />
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <h3 class="register-heading">Detalle</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Sistema operativo:</label>
                                    <input type="text" id="os" name="os" placeholder="" class="form-control" value={{OS}}>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Licencia del sistema operativo:</label>
                                    <input type="text" id="osLicense" name="osLicense" placeholder="" class="form-control" value={{licenseOS}}>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Versión de Office:</label>
                                    <input type="text" id="officeVersion" name="officeVersion" placeholder="" class="form-control" value={{officeVersion}}>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Licencia de Office:</label>
                                    <input type="text" id="officeLicense" name="officeLicense" placeholder="" class="form-control" value={{officeLicense}}>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Observaciones:</label>
                                    <input type="text" id="observation" name="observation" placeholder="" class="form-control" value={{observation}}>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Diagnóstico:</label>
                                    <input type="text" id="diagnostic" name="diagnostic" placeholder="" class="form-control" value={{diagnostic}}>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Recomendaciones:</label>
                                    <input type="text" id="recommendation" name="recommendation" placeholder="" class="form-control" value={{recommendation}}>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">Estado:</label>
                                    <div class="select mb-3">
                                        <select name="status" class="form-control" value="">
                                            <option value="disponible">Disponible</option>
                                            <option value="ocupado">Ocupado</option>
                                            <option value="mantenimiento">Mantenimiento</option>
                                        </select>
                                    </div>
                                </div>
                                    <input type="submit" class="btnRegister" value="Actualizar"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-9 register-right">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Para usar este equipo por favor ingresa tu documento</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Documento:</label>
                                    <input type="text" class="form-control" id="document" name="document" placeholder="No.Documento" value="" >
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input type="submit" class="btnRegister" value="Prestar" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/if }}
        </div>
    </div>
</form>

<script type="text/javascript">
    function generateQr(){
        let qr = document.getElementById("qr_code")
        qr.innerHTML = '';
        var qrcode = new QRCode(document.getElementById("qr_code"), {
         text: window.location.href,
         colorDark : "#000000",
         colorLight : "#ffffff",
         correctLevel : QRCode.CorrectLevel.H
       });   
       setTimeout(function(){ 
           printJS({ printable: 'qr_code', type: 'html', header: 'Equipo Numero:{{equipmentId}}' })
        }, 2000);
    }   
</script>

