{{>headdashboard}}
<body id="page-top" class="sidebar-toggled">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar-->
    {{#if coordinador}}
      {{>sidebardashboard}}
    {{/if}}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        {{>topbar}}
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
          {{#if coordinador}}
          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"></h1>
          </div>
          <!-- Content Row -->
          
          <div class="row">
            <div class="col-xl-12 col-md-12 mb-12">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Cotizador</div>
                        <form>
                          <label for="fname">First name:</label><br>
                          <input type="text" id="fname" name="fname" value="John"><br>
                          <label for="lname">Last name:</label><br>
                          <input type="text" id="lname" name="lname" value="Doe"><br><br>
                           <button type="button" onclick="createAndDownloadPdf()">Click me</button> 
                        </form> 
                    </div>
                    <div class="col-auto">
                      <i class="fas fa-desktop fa-2x text-gray-300"></i>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- Content Row -->
          <div class="row">
            {{else}}
            <div class="row">
              <!-- Area Chart -->
              <div class="col-xl-12 col-lg-8">
                <div class="card shadow mb-4">
                  <!-- Card Header - Dropdown -->
                  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Upss</h6>

                  </div>
                  <!-- Card Body -->
                  <div  id="container" class="card-body">
                            <h2>Ups! no tienes acceso a esta pagina logeatee!</h2>
                  </div>
                </div>
              </div>
              <!-- Pie Chart -->
              <!-- Content Row final space -->
                  <div class="row">
                    <!-- Content Column -->
                      <div class="col-lg-6 mb-4"></div>
                      <div class="col-lg-6 mb-4"></div>
                  </div>
              <!-- Content Row final space-->
            </div>
            {{/if}}
          </div>
       </div>
      </div>
       {{>footerdashboard}}
    </div> 
  </div>  

  <script>
    setTimeout(function() {
        $('#mydiv').fadeOut('fast');
    }, 6000);
  </script>
  <script src="https://cdn.jsdelivr.net/npm/axios@0.21.1/dist/axios.min.js"></script>
  <script src="https://cdn.tutorialjinni.com/FileSaver.js/1.3.8/FileSaver.js"></script>
  <script>  
    const json = JSON.stringify( { name: 'ed',
      receiptId: 1,
      price1: 1,
      price2: 1
    });

  createAndDownloadPdf = () => {

    axios.post('/create-pdf', json )
      .then(() => axios.get('fetch-pdf', { responseType: 'blob' }))
      .then((res) => {
        const pdfBlob = new Blob([res.data], { type: 'application/pdf' });

        saveAs(pdfBlob, 'newPdf.pdf');
      })
  }
  </script>
  

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Deseas salir ?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Selecciona "Salir" para terminar la sesion actual.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
          <a class="btn btn-primary" href="/">Salir</a>
        </div>
      </div>
    </div>
  </div>


</body>
</html>
